<Window x:Class="TALsPassworManager.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TALsPassworManager"
        mc:Ignorable="d"
        Title="Tutorial" Height="630" Width="1200" Initialized="Window_Initialized" ResizeMode="NoResize" Icon="/TALs ico.png" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Image Source="/background.jpg" Stretch="UniformToFill"/>
        <Rectangle Fill="Black" Opacity="0.4"/>
        <Label Content="Welcome to TALs password Manager" HorizontalAlignment="Left"  Margin="18,18,0,0" VerticalAlignment="Top" Foreground="White" FontSize="35" FontFamily="Segoe UI Variable Text Semibold"/>

        <TextBlock x:Name="tb" Text="*" HorizontalAlignment="Left"  Margin="18,88,0,0" VerticalAlignment="Top" Foreground="White" FontSize="28" FontFamily="Segoe UI Variable Text Semibold"/>

        <Button Content="Click to continue" FontSize="26" HorizontalAlignment="Center"  Margin="0,519,0,0" VerticalAlignment="Top" Height="55" Width="1152"  FontFamily="Segoe UI Variable Text Semibold" Foreground="White" Background="{x:Null}" BorderBrush="White" BorderThickness="4" Click="Button_Click"/>
    </Grid>
</Window>
